<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <!-- Eine Persistence Unit definiert eine logische Gruppe von EntitÃ¤ten und eine Datenquelle -->
    <persistence-unit name="appPU" transaction-type="JTA">
        <!-- Die DataSource, die in WildFly registriert ist -->
        <!-- JTA (Java Transaction API) wird verwendet, da der Application Server die Transaktionen verwaltet -->
        <!-- Der JNDI-Name der im Wildfly-Server konfigurierten DataSource -->
        <jta-data-source>java:/jdbc/AppDS</jta-data-source>

        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>

</persistence>